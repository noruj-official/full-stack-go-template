# Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Database Configuration
# Internal URL (for App -> DB)
DATABASE_URL=postgres://postgres:postgres@postgres:5432/app_db?sslmode=disable

# Database Deployment Configuration (Variables for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
POSTGRES_PORT=5432
# Public Access Control
# Set to '127.0.0.1' to DISABLE public access (Secure, Default)
# Set to '0.0.0.0' to ENABLE public access (Visible to Internet)
POSTGRES_BIND=127.0.0.1

# Application Mode (development, production)
APP_ENV=development

# Application Branding
APP_NAME=Full Stack Go Template
APP_LOGO=/static/img/logo.svg
APP_URL=http://localhost:3000

# Storage Configuration
# Profile image storage type: "database" or "s3"
PROFILE_IMAGE_STORAGE=database

# S3 Configuration (only needed if PROFILE_IMAGE_STORAGE=s3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1


# Security Configuration
AUTH_SECRET=your-secret-key-here

# Email Configuration (Resend)
RESEND_API_KEY=re_123456789
RESEND_FROM_EMAIL=no-reply@yourdomain.com
